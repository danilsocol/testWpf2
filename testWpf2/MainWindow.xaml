<Window x:Class="testWpf2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testWpf2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="700"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Name="btn_CreateNode" Content="Создать узел" FontSize="16" Width="150" Margin="10,10,0,50" HorizontalAlignment="Left" Click="btn_CreateNode_Click" ></Button>
        </DockPanel>
        <Canvas Name="canvas" Grid.Row="1" Background="LightGray" MouseDown="canvas_MouseDown">
            
        </Canvas>
    </Grid>
</Window>
